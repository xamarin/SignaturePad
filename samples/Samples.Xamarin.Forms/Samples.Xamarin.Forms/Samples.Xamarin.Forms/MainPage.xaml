<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Samples.Xam.Forms;assembly=Samples.Xam.Forms"
             x:Class="Samples.Xam.Forms.MainPage">
    <ContentPage.BindingContext>
        <local:MainViewModel />
    </ContentPage.BindingContext>
    
    <StackLayout Orientation="Vertical" >
        <local:SignaturePad x:Name="SignaturePad"
                            CaptionText="{Binding Title}" 
                            CaptionTextColor="Teal"
                            BackgroundColor="White"
                            StrokeColor="Blue"
                            VerticalOptions="Center" 
                            HorizontalOptions="Center"
                            HeightRequest="200"
                            WidthRequest="300"
                            Margin="20,20,20,20"
                            IsBlank="{Binding IsSignatureEmpty}" />
        
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Save points" 
                    Clicked="SavePointsClicked"
                    IsEnabled="{Binding IsSignatureEmpty, Converter={StaticResource InvertedBoolConverter}}"
                    />
            <Button Text="Load points" 
                    Clicked="LoadPointsClicked"
                    />
            <Button Text="Save Signature"
                    Clicked="SaveSignatureClicked"
                    IsEnabled="{Binding IsSignatureEmpty, Converter={StaticResource InvertedBoolConverter}}"
                    />
        </StackLayout>
        <Frame HorizontalOptions="Center"
                          BackgroundColor="Black">
            <Image Source="{Binding ImagePath}" Margin="2,2,2,2" BackgroundColor="White"/>
        </Frame>
    </StackLayout>
</ContentPage>