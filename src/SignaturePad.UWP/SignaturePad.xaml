<UserControl
    x:Class="SignaturePad.UWP.SignaturePad"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SignaturePad.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="LayoutRoot">
        <InkCanvas
            Name="InkCanvas"
            Opacity="1"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch" />
        <TextBlock 
            Text="X" 
            HorizontalAlignment="Left" 
            FontSize="20" 
            Margin="20,0,0,20"
            Foreground="Gray"
            Name="textBlock1" 
            VerticalAlignment="Bottom" />
        <!--<TextBlock 
            Name="XTextBlock" 
            Text="X" 
            Margin="20,0,0,20"
            Foreground="Gray"
            HorizontalAlignment="Left" 
            VerticalAlignment="Bottom" />-->
        <Border 
            Background="Gray" 
            Height="2"
            HorizontalAlignment="Stretch" 
            Margin="20,0,20,20" 
            Name="border1"
            VerticalAlignment="Bottom" />
        <!--<Border 
            Name="Border"
            BorderBrush="Gray" 
            BorderThickness="2" 
            Height="2"
            Margin="20,0,20,20" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Bottom" />-->
        <TextBlock 
            Text="Clear" 
            FontSize="16" 
            HorizontalAlignment="Right" 
            Margin="0,20,20,0" 
            Name="btnClear"
            Foreground="Gray"
            VerticalAlignment="Top" 
            Visibility="Collapsed"
            Tapped="OnClearClick" />
        <TextBlock 
            Text="Sign here." 
            TextAlignment="Center" 
            FontSize="16" 
            Margin="3,3,3,3" 
            Name="captionLabel"
            Foreground="Gray"
            VerticalAlignment="Bottom" />
        <!--<TextBlock 
            Name="CaptionTextBlock"
            FontSize="18"
            Foreground="Gray"
            HorizontalAlignment="Center" 
            VerticalAlignment="Bottom" />-->
        <!--<TextBlock 
            Name="ClearTextBlock"
            Text="Clear" 
            FontSize="18" 
            Margin="0,20,20,0" 
            Foreground="Gray"
            HorizontalAlignment="Right" 
            VerticalAlignment="Top" 
            Tapped="OnClearClick" />-->
    </Grid>
</UserControl>
